@model IEnumerable<Bev>

@{
    var imagesPerProduct = ViewBag.ImagesPerProduct as Dictionary<int, List<string>>;
    Dictionary<int, CartItem> cart = ViewBag.Cart;
    string currentSize = "M";
    string currentSugar = "Normal";
    string currentTemp = ViewBag.CurrentTemp ?? "Cold";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Beverage Menu</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
        .products {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            padding: 20px;
        }

        .product-card {
            display: flex;
            flex-direction: column;
            width: 200px;
        }

        .product-content {
            flex: 1;
            padding: 15px;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-bottom: 10px;
        }

        .slideshow {
            position: relative;
            width: 100%;
            height: 160px;
            overflow: hidden;
            border-radius: 4px;
        }

            .slideshow img {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 160px;
                object-fit: cover;
                opacity: 0;
                transition: opacity 1s ease-in-out;
            }

                .slideshow img.active {
                    opacity: 1;
                    z-index: 1;
                }

        .product-info {
            text-align: center;
            font-weight: bold;
            margin-top: 10px;
        }

        .product-actions {
            width: 100%;
        }

            .product-actions button {
                width: 100%;
                padding: 8px 0;
                border: none;
                border-radius: 4px;
                cursor: pointer;
                font-weight: bold;
                transition: background-color 0.3s;
            }

        .btn-add-to-cart {
            background-color: #28a745;
            color: white;
        }

            .btn-add-to-cart:hover {
                background-color: #218838;
            }

        .btn-in-cart {
            background-color: #6c757d;
            color: white;
        }
    </style>
</head>
<body>
    <div class="products">
        @foreach (var p in Model)
        {
            <div class="product-card">
                <div class="product-content">
                    <div class="slideshow" data-product-id="@p.Id">
                        @{
                            var images = imagesPerProduct.ContainsKey(p.Id)
                            ? imagesPerProduct[p.Id]
                            : new List<string> { p.PhotoURL };
                        }

                        @for (int i = 0; i < images.Count; i++)
                        {
                            var path = images[i];
                            <img src="/Beverage/@path"
                                 alt="@p.Name"
                                 class="slide-image @(i == 0 ? "active" : "")"
                                 data-index="@i" />
                        }
                    </div>
                    <div class="product-info">@p.Name - RM @p.Price</div>
                </div>

                <div class="product-actions">
                    <form data-ajax="true"
                          data-ajax-update="#target"
                          method="post"
                          action="/Home/UpdateCart">
                        @Html.Hidden("Size", currentSize)
                        @Html.Hidden("SugarLevel", currentSugar)
                        @Html.Hidden("Temperature", currentTemp)
                        @Html.Hidden("ProductId", p.Id)
                        @Html.Hidden("Quantity", 1)

                        <button type="submit" class="btn-add-to-cart">Add to Cart</button>
                    </form>
                </div>
            </div>
        }
    </div>

    <div id="target"></div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const slideshows = document.querySelectorAll(".slideshow");

            slideshows.forEach(slideshow => {
                const images = slideshow.querySelectorAll(".slide-image");
                let current = 0;

                if (images.length > 1) {
                    setInterval(() => {
                        images[current].classList.remove("active");
                        current = (current + 1) % images.length;
                        images[current].classList.add("active");
                    }, 10000); // Change every 10 seconds
                }
            });
        });
    </script>
</body>
</html>
